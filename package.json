    "start": "node src/server/ixatServer.js",
    "dev": "nodemon src/server/ixatServer.js",
    "build": "webpack --mode production",
    "watch": "webpack --watch --mode development",
    "lint": "eslint .",
    "test": "jest",
    "init-db": "node scripts/init-db.js",
